<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="About -myLoveSays-"
                    android:textStyle="bold"
                    android:id="@+id/textView5"
                    android:background="#87b691"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="center"
                    android:textSize="19.5dp"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:id="@+id/textView10"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="You want to know what your lover  says about you to their friends and themslves.  Well use this Social Application to Predict what he or she wants to say to you..It is meant to be a fun game. "
                    android:id="@+id/textView6"
                    android:textStyle="italic"
                    android:textAlignment="center"
                    android:textColor="#932e2e"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="&quot;inspired from an actual Game My Young Brother &apos;Osward&apos; Plays with friends&quot;."
                    android:id="@+id/textView19"
                    android:textStyle="italic"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="17dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.48" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/love1"
                    android:layout_height="376dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="3dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text=" "
                            android:id="@+id/textView11"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="3dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text=" "
                            android:id="@+id/textView141"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="About -The Developer-"
                            android:textStyle="bold"
                            android:id="@+id/textView12"
                            android:background="#87b691"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textSize="19.5dp"
                            android:textIsSelectable="true" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="3dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="    "
                            android:id="@+id/textView211"
                            android:layout_gravity="center_horizontal" />


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.17">

                            <ImageView
                                android:layout_width="118dp"
                                android:layout_height="178dp"
                                android:id="@+id/imageView2"
                                android:src="@drawable/shub"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   "
                                android:id="@+id/textView14"
                                android:layout_gravity="center_vertical" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Shubart Nyimbili - (BaShuber)"
                                    android:id="@+id/textView15"
                                    android:textAlignment="center"
                                    android:textColor="#f9f7f7"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="205dp"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="(nshubart@gmail.com)"
                                    android:id="@+id/textView16"
                                    android:textColor="#fbc80f"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="164dp"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="- UNZA Computer Science graduate, with Programming Skills, PC repair/maintenance, Database, Systems, Networks design/implementation, CISCO,SAP, Web and Mobile apps/sys Developments"
                                    android:id="@+id/textView13"
                                    android:textStyle="italic"
                                    android:textColor="#f9f7f7"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:textSize="16.5dp"
                                    android:layout_gravity="center_horizontal" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:id="@+id/abouthome"
                            android:background="#9e9c9c"
                            android:onClick="onClick" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Ndine Apps (Copyright 2016)"
                            android:textStyle="italic"
                            android:id="@+id/textView17"
                            android:background="#badcc1"
                            android:layout_weight="0.14"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>