<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/love1"
    tools:context="com.example.dell.mylovesays.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="481dp"
                android:layout_alignTop="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Play Quiz"
                    android:id="@+id/QuizButton"
                    android:background="#bbbcbd"
                    android:onClick="onClick"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="44dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:weightSum="1"
                    android:background="#99bdf2"
                    android:id="@+id/linearLayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        android:background="#99bdf2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="41dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Ndine Apps"
                            android:textStyle="bold"
                            android:id="@+id/textView2"
                            android:background="#99bdf2"
                            android:layout_weight="0.95"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="41dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="-myLoveSays-"
                            android:id="@+id/textView4"
                            android:layout_weight="0.95"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:textColor="#932e2e"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:textSize="17dp"
                            android:background="#e4ddf0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="( the creative and inovative me )"
                            android:id="@+id/textView20"
                            android:layout_below="@+id/textView2"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textSize="12dp" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:src="@drawable/mylovsays"
                        android:layout_weight="0.09" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Do You Want to Know  What are The sweetest Words  Your Lover Hides in their Heart for You?"
                    android:id="@+id/textView"
                    android:layout_marginTop="50dp"
                    android:textColor="#fecf6e"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="center"
                    android:textSize="18.5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="&quot;..Play This Quiz...To Know what your lover always wishes to say to you...&quot;"
                    android:id="@+id/textView3"
                    android:textColor="#f7a516"
                    android:textStyle="italic"
                    android:allowUndo="true"
                    android:textAlignment="center"
                    android:layout_above="@+id/textView18"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ndine Apps (nshubart@gmail.com) Copyright2016"
                    android:textStyle="italic"
                    android:id="@+id/textView18"
                    android:background="#badcc1"
                    android:layout_weight="0.38"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="15dp" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
